{
    "variables": {
        "my_build_revision": "{{env `BUILD_REVISION`}}"
    },
    "builders": [
        {
            "export_path": "{{template_dir}}/images/{{build_name}}.tar",
            "image": "docker.clarin.eu/alpine",
            "name": "docker.clarin.eu/alpine-nginx",
            "pull": false,
            "run_command": [
                "--volume=etc-CLARIN_TLS--infra:/vol/etc-CLARIN_TLS--infra/",
                "--volume=etc-nginx--infra:/vol/etc-nginx--infra/",
                "--volume=srv-www-infra.clarin.eu--infra:/vol/srv-www-infra.clarin.eu--infra/",
                "--volume=/root/certstore2/:/etc/CLARIN_TLS/",
                "--volume={{template_dir}}/resources/etc/nginx/:/etc/nginx/",
                "--volume={{template_dir}}/resources/srv/www/infra.clarin.eu/:/srv/www/infra.clarin.eu/",
                "-d",
                "-i",
                "-t",
                "{{.Image}}",
                "/bin/sh"
            ],
            "type": "docker"
        }
    ],
    "post-processors": [
        {
            "repository": "docker.clarin.eu/{{build_name}}",
            "tag": "{{user `my_build_revision`}}",
            "type": "docker-import"
        }
    ],
    "provisioners": [
        {
            "scripts": [
                "{{template_dir}}/provision.sh"
            ],
            "type": "shell"
        }
    ]
}
